{
    "manifest_version": 2,
    "name": "YouTube Search Now",
    "version": "1.1",

    "description": "This extension allows you to search YouTube videos by typing in the search bar immediately on page load. That's it!",

    "icons": {
        "16": "/images/youtube_search_now_logo-16_x_16.png",
        "32": "/images/youtube_search_now_logo-32_x_32.png",
        "48": "/images/youtube_search_now_logo-48_x_48.png",
        "128": "/images/youtube_search_now_logo-128_x_128.png"
    },

    "content_scripts": [
        {
          "matches": [
            "https://www.youtube.com/*",
            "https://youtube.com/*"
          ],
          "js": [
            "activate-search.js"
          ]
        }
    ]
  }
